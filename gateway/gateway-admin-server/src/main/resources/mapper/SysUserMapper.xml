<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cleanarch.gw.gateway.admin.system.mapper.SysUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="baseResultMap" type="cn.cleanarch.gw.common.model.system.vo.SysUserVo">
        <id column="id" property="id"/>
        <result column="user_name" property="userName"/>
        <result column="nick_name" property="nickName"/>
        <result column="password" property="password"/>
        <result column="salt" property="salt"/>
        <result column="mobile" property="mobile"/>
        <result column="avatar" property="avatar"/>
        <result column="gender" property="gender"/>
        <result column="email" property="email"/>
        <result column="last_login_time" property="lastLoginTime"/>
        <result column="last_login_ip" property="lastLoginIp"/>
        <result column="ucreate_time" property="createTime"/>
        <result column="uupdate_time" property="updateTime"/>
        <result column="lock_flag" property="lockFlag"/>
        <result column="udeleted" property="deleted"/>
        <result column="dept_id" property="deptId"/>
        <result column="dept_name" property="deptName"/>
        <collection property="roleList" ofType="cn.cleanarch.gw.common.model.system.domain.SysRole"
                    select="cn.cleanarch.gw.gateway.admin.system.mapper.SysRoleMapper.listRolesByUserId"
                    column="id">
        </collection>
    </resultMap>

	<!-- userVo结果集 -->
    <resultMap id="userVoResultMap" type="cn.cleanarch.gw.common.model.system.vo.SysUserVo">
        <id column="id" property="id"/>
        <result column="user_name" property="userName"/>
        <result column="nick_name" property="nickName"/>
        <result column="password" property="password"/>
        <result column="salt" property="salt"/>
        <result column="mobile" property="mobile"/>
        <result column="avatar" property="avatar"/>
        <result column="gender" property="gender"/>
        <result column="email" property="email"/>
        <result column="last_login_time" property="lastLoginTime"/>
		<result column="last_login_ip" property="lastLoginIp"/>
		<result column="ucreate_time" property="createTime"/>
		<result column="uupdate_time" property="updateTime"/>
		<result column="lock_flag" property="lockFlag"/>
		<result column="udeleted" property="deleted"/>
		<result column="dept_id" property="deptId"/>
		<result column="dept_name" property="deptName"/>
        <collection property="roleList" ofType="cn.cleanarch.gw.common.model.system.domain.SysRole">
            <id column="id" property="id"/>
            <result column="role_name" property="roleName"/>
            <result column="role_code" property="roleCode"/>
            <result column="role_desc" property="roleDesc"/>
            <result column="rcreate_time" property="createTime"/>
            <result column="rupdate_time" property="updateTime"/>
        </collection>
	</resultMap>

	<sql id="userRoleSql">
		u.id,
		u.user_name,
		u.password,
		u.salt,
		u.mobile,
		u.avatar,
		u.gender,
		u.email,
		u.last_login_time,
		u.last_login_ip,
		u.dept_id,
		u.deleted,
		u.lock_flag,
		u.create_time  ucreate_time,
		u.update_time  uupdate_time,
		r.id,
		r.role_name,
		r.role_code,
		r.role_desc,
		r.create_time  rcreate_time,
		r.update_time  rupdate_time
	</sql>

	<sql id="userRoleDeptSql">
		u.id,
		u.user_name,
		u.password,
		u.salt,
		u.mobile,
		u.avatar,
		u.gender,
		u.email,
		u.last_login_time,
		u.last_login_ip,
		u.deleted,
		u.lock_flag,
		u.create_time  ucreate_time,
		u.update_time  uupdate_time,
		r.id,
		r.role_name,
		r.role_code,
		r.role_desc,
		r.create_time  rcreate_time,
		r.update_time  rupdate_time,
		d.name  dept_name,
		d.dept_id
    </sql>

	<select id="getUserVoByUsername" resultMap="userVoResultMap">
		SELECT
			<include refid="userRoleSql"/>
		FROM
		sys_user  u
		LEFT JOIN sys_user_role  ur ON ur.user_id = u.id
		LEFT JOIN sys_role  r ON r.id = ur.role_id
			WHERE u.user_name = #{user_name} and u.deleted = '0' and ur.deleted = '0' and r.deleted = '0'
	</select>

	<select id="getUserVoById" resultMap="userVoResultMap">
        SELECT
	   		<include refid="userRoleDeptSql"/>
        FROM
            sys_user  u
            LEFT JOIN sys_user_role  ur ON ur.user_id = u.id
            LEFT JOIN sys_role  r ON r.id = ur.role_id
            LEFT JOIN sys_dept  d ON d.id = u.dept_id
        WHERE
           u.id = #{id} and u.deleted = '0' and ur.deleted = '0' and r.deleted = '0' and d.deleted = '0'
    </select>

	<select id="getUserVosPage" resultMap="baseResultMap">
		SELECT
		u.id,
		u.user_name,
		u.nick_name,
		u.password,
		u.salt,
		u.mobile,
		u.avatar,
		u.dept_id,
		u.gender,
		u.email,
		u.last_login_time,
		u.last_login_ip,
		u.create_time  ucreate_time,
		u.update_time  uupdate_time,
		u.deleted,
		u.lock_flag,
		 d.name  dept_name
		FROM
		sys_user  u
		LEFT JOIN sys_dept  d ON d.id = u.dept_id
		<where>
			u.deleted = '0' and d.deleted = '0'
			<if test="query.userName != null and query.userName != ''">
				AND u.user_name LIKE CONCAT('%',#{query.userName},'%')
			</if>
			<if test="query.deptId != null and query.deptId != ''">
				AND u.dept_id = #{query.deptId}
			</if>
		</where>
		ORDER BY u.create_time DESC
	</select>
</mapper>
